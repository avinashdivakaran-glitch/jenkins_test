[Unit]
Description=Bluetooth MQTT Bridge Service
Wants=bluetooth.service
After=network.target bluetooth.service

[Service]
User=root
ExecStart=/usr/local/bin/ble-mqtt-service
Restart=always
RestartSec=3

# --- ADD THIS BLOCK ---
# Set the environment variables for the service
Environment="TNN_MQTT_BROKER=tcp://192.168.1.34:1883"
# Environment="TNN_MQTT_CLIENT_ID=TNN-bluetoothService"
# Environment="TNN_MQTT_USERNAME=my_mqtt_user"

# --- END OF BLOCK ---

[Install]
WantedBy=multi-user.target
